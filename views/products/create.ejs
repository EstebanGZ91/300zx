<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <link rel="stylesheet" href="/css/styles.css">
    <title>RR Guitar Shop Create Product</title>
</head>
<body class="bg-palm crt">
  <!-- Nav Bar -->
  <%- include ('../partials/header') %> 

    <!-- FORM -->
    <div class="b-example-divider"></div>
    <section class="container-md text-center bg-purple mx-auto my-4 rounded-3">
      <div class="h-auto p-5 ">
        <h1 class="display-2 neonText text-center yellowtail ">Creación de Producto</h1>
      </div>


      <form action="/products/create" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="inputNombre" class="form-label text-light">Ingrese Nombre de Producto</label>
          <input type="text" class="form-control text-center w-50 mx-auto" id="inputNombre" name="nombre">
          <div id="emailHelp" class="form-text text-light"></div>
        </div>
        <div class="mb-3">
          <label for="inputDescripcion" class="form-label text-light">Ingrese Descripción</label>
          <input type="text" class="form-control text-center w-50 mx-auto" id="inputDescripcion" name="descripcion">
          <div id="emailHelp" class="form-text text-light">Validaciones</div>
        </div>
        <div class="mb-3">
          <label for="inputPrecio" class="form-label white">Precio</label>
          <input type="text" class="form-control text-center w-50 mx-auto" name="precio" id="inputPrecio">
        </div>
        <select class="form-select w-50 mx-auto my-4 text-center" id="inputCategoria" >
          <option selected>Seleccionar Categoría:</option>
          <option class="white" name="categoria" value="1">Guitarra</option>
          <option class="white" name="categoria"value="2">Bajo</option>
          <option class="white" name="categoria" value="3">Amplificador</option>
          <option class="white" name="categoria" value="4">FX</option>
          <option class="white" name="categoria" value="5">Vintage</option>
          <option class="white" name="categoria" value="6">Accesorio</option>
        </select>
        <div class="mb-3">
          <label for="inputFechaCreacion" class="form-label white">Fecha Creación</label>
          <input type="date" class="form-control text-center w-50 mx-auto" name="fechaCreacion" id="inputFechaCreacion">
        </div>
        <button type="reset" class="btn btn-primary my-4">Reiniciar</button>
        <input type="submit" class="btn btn-primary my-4" value="Registrar"></input>
      </form>
    </section>
    <!-- FORM -->

  <!-- Footer -->
  <%- include ('../partials/footer') %>   
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
</body>
</html>