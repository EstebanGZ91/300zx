<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <link rel="stylesheet" href="/css/styles.css">
    <title>RR Guitar Shop Account Register</title>
</head>
<body class="bg-palm crt">
  <!-- Nav Bar -->
  <%- include ('../partials/header') %> 
  <div class="b-example-divider"></div>
  <section class="container-md text-center bg-purple mx-auto my-4 rounded-3">
    <div class="h-auto p-5 ">
      <h1 class="display-2 neonText text-center yellowtail ">Creación de Cuenta</h1>
    </div>
    <!-- FORM -->
    <form>
      <div class="mb-3">
        <label for="inputNombre" class="form-label text-light">Ingrese su Nombre de Usuario</label>
        <input type="text" class="form-control text-center w-50 mx-auto" id="inputNombre" aria-describedby="emailHelp">
        <div id="emailHelp" class="form-text text-light"></div>
      </div>
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label text-light">Ingrese su Email</label>
        <input type="email" class="form-control text-center w-50 mx-auto" id="exampleInputEmail1" aria-describedby="emailHelp">
        <div id="emailHelp" class="form-text text-light">Validaciones</div>
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label white">Ingrese su Contraseña</label>
        <input type="password" class="form-control text-center w-50 mx-auto" id="exampleInputPassword1">
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label white">Vuelva a ingresar su Contraseña</label>
        <input type="password" class="form-control text-center w-50 mx-auto" id="exampleInputPassword1">
      </div>
      <button type="reset" class="btn btn-primary my-4">Reiniciar</button>
      <button type="submit" class="btn btn-primary my-4">Registrarse</button>
    </form>
    <!-- FORM -->
  </section>
  <!-- Footer -->
  <%- include ('../partials/footer') %>   
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
</body>
</html>